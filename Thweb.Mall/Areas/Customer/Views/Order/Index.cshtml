                            </div>
                            <div class="ml-auto grid gap-1 text-right">
                                <div class="font-semibold">@(item.Product.Price * item.Product.Price)</div>
                                <div class="text-sm tracking-tighter">@item.Product.Price X @item.Product.Price</div>
                            </div>
                        </div>
                        <div data-orientation="horizontal" role="none" class="shrink-0 bg-gray-100 h-[1px] w-full"></div>
                    }
                }
