@model IEnumerable<Cart>
@{
    var orderTotal = 0;
    var orderTitle = "";
    if (Model != null)
    {
        orderTotal = Model.Sum(item => item.Count * item.Product.Price);
        if (Model.Count() == 1)
        {
            orderTitle = Model.FirstOrDefault().Product.Title;
        }
        else
        {
            orderTitle = Model.FirstOrDefault().Product.Title + "외 " + (Model.Count() - 1) + "건";
        }
    }
    
}

<div class="">
