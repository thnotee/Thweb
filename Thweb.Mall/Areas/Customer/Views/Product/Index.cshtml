@model PagedList<Product>
@{

}


<!--<p class="text-2xl m-4 font-semibold">관련상품</p>-->
<!-- <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />-->
<div class="text-2xl m-4 font-semibold text-center">
    @if (Model.Any())
    {
        <span>@Model.FirstOrDefault().Category.Name</span>
    }
    else
    {
       <span>한국식품</span>
    }
</div>
<hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
<section class="flex justify-start flex-wrap p-7">


        @if (Model.Any())
        {
            foreach (var item in Model)
            {

                <div class="w-1/3 max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

                <a asp-controller="product" asp-action="detail" asp-route-id ="@item.Id">

                        @if (item.Images.Any())
                        {
                            var imagePath = item.Images.FirstOrDefault().DirectoryPath + item.Images.FirstOrDefault().SaveFileName;
                            <img class="p-8 rounded-t-lg w-[24rem] h-[15rem]"
                                 src="@imagePath"
                                 alt="product image" />
                        }
                        else
                        {
                            <img class="p-8 rounded-t-lg"
                                 src="https://placeholder.com/382x245/png"
                                 alt="product image" />
                        }

                    </a>


                    <div class="px-5 pb-5">
                        <a href="#">
                            <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                                @item.Title
                            </h5>
                        </a>
                        <div class="flex items-center mt-2.5 mb-5">
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-3xl font-bold text-gray-900 dark:text-white"> @item.Price</span>
                        <a href="javascript:AddToCart('@item.Id')"
                               class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                장바구니 추가
                            </a>
                        </div>
                    </div>
                </div>
            }


        }

   

</section>
