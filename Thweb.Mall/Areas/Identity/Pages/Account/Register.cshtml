@page
@model RegisterModel
@{
    ViewData["Title"] = "회원가입";
}

<form asp-page="/Account/Register" method="post" class="container space-y-8 p-10">

    <div class="space-y-2">
        <h2 class="text-3xl font-bold">회원가입</h2>
    </div>
    <div class="space-y-4">
        <div class="space-y-2">
            <label label asp-for="Input.Email" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 flex  justify-start items-center"
                   for="email">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 13.5h3.86a2.25 2.25 0 0 1 2.012 1.244l.256.512a2.25 2.25 0 0 0 2.013 1.244h3.218a2.25 2.25 0 0 0 2.013-1.244l.256-.512a2.25 2.25 0 0 1 2.013-1.244h3.859m-19.5.338V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18v-4.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 0 0-2.15-1.588H6.911a2.25 2.25 0 0 0-2.15 1.588L2.35 13.177a2.25 2.25 0 0 0-.1.661Z" />
                </svg>

                <span class="mx-2">Email</span>
            </label>
            <input asp-for="Input.Email"
                   placeholder="이메일을 입력해주세요."
                   type="email"
                   class="th-input" />
            <span asp-validation-for="Input.Email" class="text-red-500 text-sm p-4"></span>
        </div>

        <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 flex  justify-start items-center"
                   asp-for="Input.Password">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z" />
                </svg>


                <span class="mx-2">비밀번호</span>
            </label>
            <input asp-for="Input.Password"
                   class="th-input"
                   placeholder="Enter your name" />
            <span asp-validation-for="Input.Password" class="text-red-500 text-sm p-4"></span>
        </div>

        <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 flex  justify-start items-center"
                   asp-for="Input.ConfirmPassword">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
                </svg>


                <span class="mx-2">비밀번호 확인</span>
            </label>
            <input asp-for="Input.ConfirmPassword"
                   class="th-input"
                   placeholder="Enter your name" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm p-4"></span>
        </div>
        <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 flex  justify-start items-center"
                   asp-for="Input.UserName">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>

                <span class="mx-2">Name</span>
            </label>
            <input asp-for="Input.UserName"
                   class="th-input"
                   placeholder="Enter your name" />
            <span asp-validation-for="Input.UserName" class="text-red-500 text-sm p-4"></span>
        </div>
        <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 flex  justify-start items-center"
                   asp-for="Input.PostCode">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>


                <span class="mx-2">Address</span>
            </label>
            <input class="th-input"
                   asp-for="Input.PostCode"
                   placeholder="Enter your postcode" />
            <span asp-validation-for="Input.PostCode" class="text-red-500 text-sm p-4"></span>
        </div>
        <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                   asp-for="Input.PostName">
                Post Name
            </label>
            <input class="th-input"
                   asp-for="Input.PostName"
                   placeholder="Enter the post name" />
            <span asp-validation-for="Input.PostName" class="text-red-500 text-sm p-4"></span>
        </div>
        <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                   asp-for="Input.PostDetail">
                Post Detail
            </label>
            <input class="th-input"
                   placeholder="Detail"
                   type="text"
                   asp-for="Input.PostDetail" />
            <span asp-validation-for="Input.PostDetail" class="text-red-500 text-sm p-4"></span>
        </div>
        <div class="flex items-center justify-center md:justify-start">

            <button class="th-bl-btn">
                회원가입
            </button>

        </div>

    </div>



</form>

